{
  "compilerOptions": {
    "baseUrl": "packages",
    "target": "ES2018",
    "module": "ESNext",
    "moduleResolution": "node",
    "sourceMap": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "allowJs": true
  },
  "exclude": [
    "node_modules"
  ]
}
