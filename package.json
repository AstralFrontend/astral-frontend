{
  "private": true,
  "workspaces": [
    "packages/*",
    "packages/*/*",
    "scripts"
  ],
  "scripts": {
    "test": "jest",
    "docz:dev": "docz dev",
    "docz:build": "docz build",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "yaspeller": "yaspeller . --only-errors"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "prettier --write",
      "eslint --fix",
      "cross-env NODE_ENV=test jest --bail --findRelatedTests",
      "yaspeller",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn run test && lint-staged"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.8.6",
    "@babel/plugin-proposal-export-default-from": "^7.8.3",
    "@bugsnag/js": "^6.5.2",
    "@storybook/addon-actions": "^5.3.14",
    "@storybook/addon-backgrounds": "^5.3.14",
    "@storybook/addon-docs": "^5.3.14",
    "@storybook/addon-knobs": "^5.3.14",
    "@storybook/addon-links": "^5.3.14",
    "@storybook/addon-viewport": "^5.3.14",
    "@storybook/addons": "^5.3.14",
    "@storybook/react": "^5.3.14",
    "acorn": "^7.1.0",
    "babel-jest": "^25.1.0",
    "babel-loader": "^8.0.6",
    "core-js": "^3.6.4",
    "cross-env": "^7.0.0",
    "css-loader": "3.4.2",
    "docz": "^2.2.0",
    "docz-theme-default": "^1.2.0",
    "eslint": "^6.8.0",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "jest-junit": "^10.0.0",
    "lint-staged": "^10.0.8",
    "prettier": "^1.19.1",
    "react": "^16.13.0",
    "react-dom": "^16.13.0",
    "react-router-dom": "^5.1.2",
    "style-loader": "1.1.3",
    "webpack": "^4.41.6",
    "yaspeller": "^7.0.0"
  }
}
